import pandas as pd
from sklearn.preprocessing import MinMaxScaler, MaxAbsScaler, StandardScaler, Normalizer

df = pd.read_csv("data.csv")

features = df[['age', 'salary']]


# Min-Max Scaling

minmax = MinMaxScaler()
df_minmax = minmax.fit_transform(features)

# Max Absolute Scaling

maxabs = MaxAbsScaler()
df_maxabs = maxabs.fit_transform(features)

# Z-score Standardization

standard = StandardScaler()
df_standard = standard.fit_transform(features)

# Vector Normalization

normalizer = Normalizer()
df_normalized = normalizer.fit_transform(features)

print("Feature Scaling Completed")
